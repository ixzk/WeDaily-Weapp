.empty-cell {
    width: 90vw;
    height: 300rpx;
    margin: 10rpx 0;
    border-radius: 10rpx;

    background: #F9F9F9;
  
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.empty-cell .tip {
    color: lightgray;
    font-weight: 300;
}

.empty-cell .add-btn {
    margin-top: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.empty-cell .add-btn image {
    width: 45rpx;
    height: 45rpx;
}

.empty-cell .add-btn .add-tip {
    color: gray;
    font-size: 30rpx;
}
