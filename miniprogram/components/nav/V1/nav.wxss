.nav-container {
  height: 44px;
  width: 100%;
  background-color: #FFF;
  z-index: 999;
  display: flex;
  flex-direction: row;
  position: fixed;
  top: 0;
  left: 0;
}

.nav-button {
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.nav-button > image {
  width: 46rpx;
  height: 46rpx;
}
.nav-title {
  flex: 1;
  padding-right: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 44px;
}
.nav-title > text {
  font-size: 32rpx;
  color: #333;
  font-weight: 400;
}